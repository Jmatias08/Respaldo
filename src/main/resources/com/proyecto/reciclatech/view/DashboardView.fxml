<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyecto.reciclatech.controller.DashboardController">
    <children>
        <Pane prefHeight="600.0" prefWidth="800.0">
            <children>
                <Label fx:id="lblTitulo" layoutX="280.0" layoutY="20.0" text="Panel de Reciclaje">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>

                <!-- Historial -->
                <VBox layoutX="40.0" layoutY="70.0" spacing="5.0">
                    <Label text="Historial de residuos">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <TableView fx:id="tablaHistorial" prefHeight="200.0" prefWidth="300.0">
                        <columns>
                            <TableColumn fx:id="colResiduo" prefWidth="100.0" text="Residuo" />
                            <TableColumn fx:id="colCategoria" prefWidth="100.0" text="Categoría" />
                            <TableColumn fx:id="colFecha" prefWidth="100.0" text="Fecha" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Puntos personales -->
                <VBox layoutX="400.0" layoutY="70.0" spacing="10.0">
                    <Label text="Puntos personales">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label fx:id="lblPuntos" text="Puntos: 0">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                </VBox>

                <!-- Gráfico personal -->
                <VBox layoutX="40.0" layoutY="320.0" spacing="5.0">
                    <Label text="Clasificación personal de residuos">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <BarChart fx:id="graficoPersonal" prefHeight="200.0" prefWidth="300.0">
                        <xAxis>
                            <CategoryAxis label="Categoría" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Cantidad" />
                        </yAxis>
                    </BarChart>
                </VBox>

                <!-- Gráfico general -->
                <VBox layoutX="400.0" layoutY="320.0" spacing="5.0">
                    <Label text="Clasificación global de residuos">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <BarChart fx:id="graficoGeneral" prefHeight="200.0" prefWidth="300.0">
                        <xAxis>
                            <CategoryAxis label="Categoría" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Cantidad" />
                        </yAxis>
                    </BarChart>
                </VBox>
            <Button fx:id="btnRegresar" layoutX="26.0" layoutY="14.0" mnemonicParsing="false" onAction="#irABasura" text="Regresar" />
            <Label fx:id="lblMensaje" layoutX="604.0" layoutY="28.0" text="Label" />
            </children>
        </Pane>
    </children>
</AnchorPane>
